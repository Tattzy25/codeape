# Groq AI Chatbot Environment Variables
# Copy this file to .env and fill in your values

# Groq API Configuration
# Get your free API key at: https://console.groq.com/keys
VITE_GROQ_API_KEY=your_groq_api_key_here

# Optional: Default AI Model (if not set, will use meta-llama/llama-4-scout-17b-16e-instruct)
# Available models: meta-llama/llama-4-scout-17b-16e-instruct, llama-3.3-70b-versatile, llama-3.1-8b-instant, gemma2-9b-it
VITE_DEFAULT_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# Optional: Default Settings
VITE_DEFAULT_TEMPERATURE=0.7
VITE_DEFAULT_MAX_TOKENS=5000
VITE_DEFAULT_TOP_P=1

# App Configuration
VITE_APP_NAME="Groq AI Chatbot"
VITE_APP_DESCRIPTION="Lightning-fast AI conversations powered by Groq"

# ElevenLabs Text-to-Speech Configuration
# Get your API key at: https://elevenlabs.io/
VITE_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
VITE_ELEVENLABS_VOICE_ID=cEOAFYYd4CZK41v4bLEb

# Tavily Search API Configuration
# Get your API key at: https://app.tavily.com/
VITE_TAVILY_API_KEY=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

# QStash Configuration (Server-side only)
# Get your credentials at: https://console.upstash.com/qstash
QSTASH_URL=your_qstash_url_here
QSTASH_TOKEN=your_qstash_token_here

# Upstash Redis Configuration
# Get your Redis URL and token from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Neon Database Configuration
# Get your database URL from: https://console.neon.tech/
VITE_NEON_DATABASE_URL=your_neon_database_url_here

# Analytics (Optional)
# VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
# VITE_POSTHOG_KEY=your_posthog_key_here

# Feature Flags (Optional)
VITE_ENABLE_VOICE_INPUT=false
VITE_ENABLE_FILE_UPLOAD=false
VITE_ENABLE_EXPORT=true
VITE_ENABLE_THEMES=true

# Security
# Set to 'true' in production to enforce HTTPS
VITE_FORCE_HTTPS=false

# Performance
# Maximum number of messages to keep in memory
VITE_MAX_MESSAGES_HISTORY=100

# Rate Limiting (requests per minute)
VITE_RATE_LIMIT=60