# Groq AI Chatbot Environment Variables
# Copy this file to .env and fill in your values

# Groq API Configuration
# Get your free API key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Optional: Default AI Model (if not set, will use meta-llama/llama-4-scout-17b-16e-instruct)
# Available models: meta-llama/llama-4-scout-17b-16e-instruct, llama-3.3-70b-versatile, llama-3.1-8b-instant, gemma2-9b-it
NEXT_PUBLIC_DEFAULT_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# Optional: Default Settings
NEXT_PUBLIC_DEFAULT_TEMPERATURE=0.7
NEXT_PUBLIC_DEFAULT_MAX_TOKENS=5000
NEXT_PUBLIC_DEFAULT_TOP_P=1

# App Configuration
NEXT_PUBLIC_APP_NAME="Groq AI Chatbot"
NEXT_PUBLIC_APP_DESCRIPTION="Lightning-fast AI conversations powered by Groq"

# ElevenLabs Text-to-Speech Configuration
# Get your API key at: https://elevenlabs.io/
NEXT_PUBLIC_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
NEXT_PUBLIC_ELEVENLABS_VOICE_ID=cEOAFYYd4CZK41v4bLEb

# Tavily Search API Configuration
# Get your API key at: https://app.tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Upstash Redis Configuration
# Get your Redis URL and token from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Analytics (Optional)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_VOICE_INPUT=false
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=false
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_THEMES=true

# Security
# Set to 'true' in production to enforce HTTPS
NEXT_PUBLIC_FORCE_HTTPS=false

# Performance
# Maximum number of messages to keep in memory
NEXT_PUBLIC_MAX_MESSAGES_HISTORY=100

# Rate Limiting (requests per minute)
NEXT_PUBLIC_RATE_LIMIT=60