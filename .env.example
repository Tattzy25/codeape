# Groq AI Chatbot Environment Variables
# Copy this file to .env and fill in your values

# Groq API Configuration
# Get your free API key at: https://console.groq.com/keys
VITE_GROQ_API_KEY=your_groq_api_key_here

# Optional: Default AI Model (if not set, will use llama3-8b-8192)
# Available models: llama3-8b-8192, llama3-70b-8192, mixtral-8x7b-32768, gemma-7b-it
VITE_DEFAULT_MODEL=llama3-8b-8192

# Optional: Default Settings
VITE_DEFAULT_TEMPERATURE=0.7
VITE_DEFAULT_MAX_TOKENS=1024
VITE_DEFAULT_TOP_P=1

# App Configuration
VITE_APP_NAME="Groq AI Chatbot"
VITE_APP_DESCRIPTION="Lightning-fast AI conversations powered by Groq"

# Analytics (Optional)
# VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
# VITE_POSTHOG_KEY=your_posthog_key_here

# Feature Flags (Optional)
VITE_ENABLE_VOICE_INPUT=false
VITE_ENABLE_FILE_UPLOAD=false
VITE_ENABLE_EXPORT=true
VITE_ENABLE_THEMES=true

# Security
# Set to 'true' in production to enforce HTTPS
VITE_FORCE_HTTPS=false

# Performance
# Maximum number of messages to keep in memory
VITE_MAX_MESSAGES_HISTORY=100

# Rate Limiting (requests per minute)
VITE_RATE_LIMIT=60